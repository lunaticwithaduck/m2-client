<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- This file is automatically imported by all projects in the solution -->
  
  <!-- Vcpkg integration for CI/CD -->
  <PropertyGroup Condition="'$(VCPKG_ROOT)' != ''">
    <VcpkgRoot>$(VCPKG_ROOT)</VcpkgRoot>
    <VcpkgInstalledDir Condition="'$(VcpkgInstalledDir)' == ''">$(SolutionDir)build\vcpkg\</VcpkgInstalledDir>
    <VcpkgTriplet Condition="'$(VcpkgTriplet)' == ''">x86-windows</VcpkgTriplet>
    <VcpkgEnabled>true</VcpkgEnabled>
  </PropertyGroup>

  <!-- Import vcpkg props if vcpkg is enabled -->
  <Import Project="$(VcpkgRoot)\scripts\buildsystems\msbuild\vcpkg.props" Condition="'$(VcpkgEnabled)' == 'true' AND Exists('$(VcpkgRoot)\scripts\buildsystems\msbuild\vcpkg.props')" />
</Project>
